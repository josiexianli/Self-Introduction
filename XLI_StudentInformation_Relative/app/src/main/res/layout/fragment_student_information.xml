<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingStart="@dimen/margin_40"
    tools:context="com.xli.xli_studentinformation_relative.StudentInformationFragment"
    tools:showIn="@layout/activity_student_information">

    <TextView
        android:id="@+id/student_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_28"
        android:text="@string/name"
        android:textSize="@dimen/size_24" />

    <TextView
        android:id="@+id/student_info_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/student_info_name"
        android:layout_marginTop="42dp"
        android:text="Job Title: Student"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/student_info_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/student_info_job_title"
        android:layout_marginTop="20dp"
        android:text="@string/programming_background1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/student_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/student_info_name"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/date"
        android:textSize="10sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/student_info_my_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/student_info_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/student_info_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:contentDescription="@string/picture_description"
        app:srcCompat="@drawable/image" />

</RelativeLayout>
